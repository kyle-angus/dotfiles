#!/bin/bash

unalias -a

if [[ $OSTYPE == *"darwin"* ]]; then
  alias l="ls -aG"
  alias ll="ls -alG"
else 
  alias l="ls -a --color"
  alias ll="ls -al --color"
fi

alias vi="vim"
alias '?'=duckduckgo
alias gs="git status"
alias ga="git add"
alias gd="git diff"
alias gaa="git add -A"
alias gc="git commit"
alias gps="git push"
alias gpu="git pull"

# Tmux with UTF-8 support 
alias tmux="tmux -u"